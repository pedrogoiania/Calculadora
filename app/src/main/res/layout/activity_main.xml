            <!--android:text="Operador = " />-->

        <!--<EditText-->
            <!--android:id="@+id/ETNegativo"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ems="10"-->
            <!--android:inputType="textPersonName"-->
            <!--android:text="Name" />-->

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
